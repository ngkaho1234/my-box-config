[Unit]
Description=Remote desktop service (VNC)
After=syslog.target network.target graphical.target

[Service]
Type=simple
ExecStart=/usr/bin/sh -c '/usr/bin/x0vncserver -display :0 -rfbport %i -passwordfile %h/.vnc/passwd -SecurityTypes VncAuth,Plain,TLSVnc,TLSPlain,X509None,X509Vnc,X509Plain'

[Install]
WantedBy=default.target
